<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="ConexionPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>entidades.Orden</class>
        <class>conexion.Conexion</class>
        <class>entidades.Cliente</class>
        <class>entidades.Vehiculo</class>
        <class>entidades.Presupuesto</class>
        <class>entidades.Tarea</class>
        <class>entidades.Empleado</class>
        <class>entidades.Refaccion</class>
        <class>entidades.TareaRefaccionId</class>
        <class>entidades.TareaRefaccion</class>
        <class>entidades.Pago</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/taller_db?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="itson"/>

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>

            <property name="javax.persistence.sql-load-script-source" value="META-INF/data.sql"/>

            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>

    </persistence-unit>
</persistence>
